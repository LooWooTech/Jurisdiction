@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var action = Request.RequestContext.RouteData.Values["action"].ToString();
}

@section nav{
    <li class="@(action=="Index"?"active":null)"><a href="/Manager/Index"><i class="glyphicon glyphicon-home"></i>&nbsp;首页</a></li>
    <li class="@(action=="Apply"?"active":null)"><a href="/Manager/Apply"><i class="glyphicon glyphicon-plane"></i>&nbsp; 申请权限</a></li>
    <li class="@(action==""?"active":null)"><a href=""><i class="glyphicon glyphicon-road"></i>&nbsp; 申请历史</a></li>
    <li class="@(action=="Manager"?"active":null)"><a href="/Manager/Manager"><i class="glyphicon glyphicon-cog"></i>&nbsp;申请中心&nbsp;<span class="badge">@(ViewBag.BCount)</span></a></li>
    <li class="@(action=="CHistory"?"active":null)"><a href="/Manager/CHistory"><i class="glyphicon glyphicon-flag"></i>&nbsp;审批历史</a></li>
}
@RenderBody()
