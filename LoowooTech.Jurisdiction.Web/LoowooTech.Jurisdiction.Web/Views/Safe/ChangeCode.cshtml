@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/Safe/_Layout.cshtml";
}

<form class="form-horizontal" method="post" action="/Safe/ChangeCode" id="Code">
    <div class="form-group">
        <label for="Old" class="control-label col-lg-3">原始密码</label>
        <div class="col-lg-6">
            <input type="password" name="Old"  class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label for="Word" class="control-label col-lg-3">新密码</label>
        <div class="col-lg-6">
            <input type="password" name="WordOne"  class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label for="Word" class="control-label col-lg-3">确认密码</label>
        <div class="col-lg-6">
            <input type="password" name="Word"  class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6 col-lg-offset-3">
            <input type="submit" class="btn btn-primary" value="修改"/>
        </div>
    </div>
</form>


<script>
    $(function () {

        $("[name=Word]").blur(function () {
            var two = $(this).val();
            var one = $("[name=WordOne]").val();
            if (one != two) {
                alert("新密码输入的两次不一致");
            }
        })
        $("#Code").submit(function () {
            var one = $("[name=WordOne]").val();
            var two = $("[name=Word]").val();
            if (one != two) {
                alert("新密码输入的两次不一致");
                return false;
            }
            
        })
    })
</script>
