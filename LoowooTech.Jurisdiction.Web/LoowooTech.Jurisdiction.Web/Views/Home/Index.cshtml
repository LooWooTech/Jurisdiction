@{
    ViewBag.Title = "登录首页";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" method="post" action="/Home/Login">
    <div class="form-group">
        <label for="Name" class="control-label col-lg-3"><i class="glyphicon glyphicon-user"></i>&nbsp;用户名：</label>
        <div class="col-lg-3">
            <input type="text" name="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Password" class="control-label col-lg-3"><i class="glyphicon glyphicon-lock"></i>&nbsp; 密码:</label>
        <div class="col-lg-3">
            <input type="password" name="Password" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-3 col-lg-offset-3">
            <button type="submit" class="btn btn-primary">登录</button>
        </div>
    </div>
</form>
