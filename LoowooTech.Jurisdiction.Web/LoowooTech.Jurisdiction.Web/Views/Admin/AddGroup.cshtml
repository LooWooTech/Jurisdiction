@using LoowooTech.Jurisdiction.Models
@using LoowooTech.Jurisdiction.Common
@model IEnumerable<string>
<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#AddGroup"><i class="glyphicon glyphicon-plus"></i>&nbsp;添加组</button>
<div class="modal fade" id="AddGroup" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">添加组</h4>
            </div>
            <form class="form-horizontal" method="post" action="/Admin/CreateGroup">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Name" class="control-label col-lg-3">组名：</label>
                        <div class="col-lg-6">
                            <input type="text" name="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="category" class="control-label col-lg-3">类型：</label>
                        <div class="col-lg-6">
                            @foreach (Category category in Enum.GetValues(typeof(Category)))
                            {
                                int key=(int)category;
                                if (category == Category.user)
                                {
                                    continue;
                                }
                                else
                                {
                                    <label class="radio-inline">
                                        <input type="radio" name="category" value="@(key)" />@(category.GetDescription())
                                    </label>
                                }
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Position" class="control-label col-lg-3">隶属于：</label>
                        <div class="col-lg-6">
                            <select name="Position" class="form-control">
                                @foreach (var item in Model)
                                {
                                    <option value="@(item)">@(item)</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="descriptions" class="control-label col-lg-3">描述：</label>
                        <div class="col-lg-6">
                            <textarea name="descriptions" class="form-control" style="height:200px;"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-offset-3">
                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i>取消</button>
                            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i>确定</button>
                        </div>
                    </div>
                </div>
            </form>      
        </div>
    </div>
</div>